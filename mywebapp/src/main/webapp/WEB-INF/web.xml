<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
  	<servlet-name>MyFirstServlet</servlet-name>
  	<servlet-class>com.tc.mywebapp.servlets.MyFirstServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>EmployeeSearchServlet</servlet-name>
  	<servlet-class>com.tc.mywebapp.servlets.EmployeeSearchServlet</servlet-class>
  </servlet> 
  <servlet>
  	<servlet-name>MyFirstServlet</servlet-name>
  	<jsp-file>/MyFirstJSP.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>MyFirstServlet</servlet-name>
  	<url-pattern>/currentDateJSP</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>MyFirstServlet</servlet-name>
  	<url-pattern>/currentDate</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>EmployeeSearchServlet</servlet-name>
  	<url-pattern>/search</url-pattern>
  </servlet-mapping> 
</web-app>
